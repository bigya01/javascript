    <div class="row">

    <% bookList.forEach(book => {%>
    <div class="card"style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title" ><%= book.title %> <br>
        </h5>
        <p class="card-text" ><%= book.description %> <br></p>
        <p class="card-text" ><%= book.author %> <br></p>

        <form method="get" action="/edit/<%= book._id %>">
          <button type="submit" class="btn btn-primary">Edit book</button>
      </form>
        <form method="POST" action="/delete/<%= book._id %>">
          <button type="submit" class="btn btn-primary">Delete book</button>
      </form>
      
      </div>
    </div>
 <% })%>
</div>

   
  </body>
